{
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"extends": ["plugin:react/recommended", "airbnb"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"import/prefer-default-export": "off",
		"semi": "off",
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"comma-dangle": ["error", "never"],
		"react/jsx-indent": [4, "tab"]
	}
}
